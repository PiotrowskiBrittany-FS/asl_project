<div>
	{% if choice %}
		<h1>Editing Choice</h1>
	{% else %}
		<h1>Creating a Choice</h1>
	{% endif %}
	{% if choice %}
	<form action="/choices/{{ choice.id }}" method="post">
		{% else %}
			<form action="/choices" method="post">
		{% endif %}
			<div>
				<label for="name">Name:</label>
				{% if choice %}
					<input type="text" id="name" name="name" value="{{ choice.name }}"/>
				{% else %}
					<input type="text" id="name" name="name"/>
				{% endif %}
			</div>
		<input type="submit" value="Save Choice"/>
		<a href="/choices">View Choices</a>
	</form>
</div>